<!-- views/pages/change-password.ejs -->
<%- include('../partials/messages') %>
    <div class="max-w-md mx-auto bg-slate-800 rounded-lg shadow-lg p-8 mt-12">
        <h1 class="text-2xl font-bold mb-6 text-cyan-400">Change Password</h1>
        <form action="/profile/change-password" method="POST" class="space-y-6">
            <div>
                <label class="block text-slate-400 mb-1">Current Password</label>
                <input type="password" name="currentPassword"
                    class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white" required>
            </div>
            <div>
                <label class="block text-slate-400 mb-1">New Password</label>
                <input type="password" name="newPassword"
                    class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white" required>
            </div>
            <div>
                <label class="block text-slate-400 mb-1">Confirm New Password</label>
                <input type="password" name="confirmPassword"
                    class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white" required>
            </div>
            <div class="flex justify-between items-center mt-8">
                <a href="/profile" class="text-slate-400 hover:text-cyan-400 text-sm">Back to Profile</a>
                <button type="submit"
                    class="bg-cyan-600 hover:bg-cyan-700 text-white px-6 py-2 rounded-md font-semibold">Change
                    Password</button>
            </div>
        </form>
    </div>