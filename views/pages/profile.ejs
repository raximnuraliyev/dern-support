<!-- views/pages/profile.ejs -->
<%- include('../partials/messages') %>
    <div class="max-w-2xl mx-auto bg-slate-800 rounded-lg shadow-lg p-8 mt-8">
        <h1 class="text-2xl font-bold mb-6 text-cyan-400">My Profile</h1>
        <form action="/profile" method="POST" class="space-y-6">
            <div>
                <label class="block text-slate-400 mb-1">Name</label>
                <input type="text" name="name" value="<%= user.name %>"
                    class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white" required>
            </div>
            <div>
                <label class="block text-slate-400 mb-1">Email</label>
                <input type="email" name="email" value="<%= user.email %>"
                    class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white" required>
            </div>
            <div>
                <label class="block text-slate-400 mb-1">Account Type</label>
                <% if (user.isAdmin) { %>
                    <input type="text" value="<%= user.accountType %>"
                        class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white" readonly>
                    <% } else { %>
                        <select name="accountType"
                            class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md text-white">
                            <option value="Individual" <%=user.accountType==='Individual' ? 'selected' : '' %>
                                >Individual</option>
                            <option value="Business" <%=user.accountType==='Business' ? 'selected' : '' %>>Business
                            </option>
                        </select>
                        <% } %>
            </div>
            <div class="flex justify-between items-center mt-8">
                <a href="/profile/change-password" class="text-cyan-400 hover:text-cyan-300 text-sm">Change Password</a>
                <button type="submit"
                    class="bg-cyan-600 hover:bg-cyan-700 text-white px-6 py-2 rounded-md font-semibold">Save
                    Changes</button>
            </div>
        </form>
    </div>