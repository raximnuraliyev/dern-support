<div class="max-w-2xl mx-auto bg-slate-800 rounded-lg shadow-lg p-8 mt-8">
  <h1 class="text-2xl font-bold mb-6 text-cyan-400">Create Knowledge Article</h1>
  <form action="/knowledge/new" method="POST" class="space-y-6">
    <div>
      <label for="title" class="block text-slate-300 mb-1">Title<span class="text-red-500">*</span></label>
      <input type="text" id="title" name="title" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500 focus:border-transparent">
    </div>
    <div>
      <label for="category" class="block text-slate-300 mb-1">Category<span class="text-red-500">*</span></label>
      <select id="category" name="category" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500 focus:border-transparent">
        <option value="">Select a category</option>
        <option value="Hardware">Hardware</option>
        <option value="Software">Software</option>
        <option value="Network">Network</option>
        <option value="Security">Security</option>
        <option value="Troubleshooting">Troubleshooting</option>
        <option value="Other">Other</option>
      </select>
    </div>
    <div>
      <label for="content" class="block text-slate-300 mb-1">Content<span class="text-red-500">*</span></label>
      <textarea id="content" name="content" rows="8" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500 focus:border-transparent"></textarea>
    </div>
    <div>
      <label for="tags" class="block text-slate-300 mb-1">Tags <span class="text-slate-400 text-xs">(comma separated)</span></label>
      <input type="text" id="tags" name="tags" placeholder="e.g. printer, wifi, error" class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500 focus:border-transparent">
    </div>
    <div class="flex justify-between items-center mt-8">
      <a href="/knowledge" class="text-cyan-400 hover:text-cyan-300">Cancel</a>
      <button type="submit" class="bg-cyan-600 hover:bg-cyan-700 text-white px-6 py-2 rounded-md transition duration-200">Create</button>
    </div>
  </form>
</div>