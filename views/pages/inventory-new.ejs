<!-- Add Inventory Item Page -->
<div class="max-w-xl mx-auto bg-slate-800 rounded-lg shadow-lg p-8 mt-8">
  <h2 class="text-2xl font-semibold mb-6 text-center">Add Inventory Item</h2>
  <form action="/inventory/new" method="POST" enctype="multipart/form-data" class="space-y-6">
    <div>
      <label for="name" class="block text-slate-300 mb-1">Item Name <span class="text-red-400">*</span></label>
      <input type="text" id="name" name="name" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500">
    </div>
    <div>
      <label for="description" class="block text-slate-300 mb-1">Description <span class="text-red-400">*</span></label>
      <textarea id="description" name="description" required rows="3" class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500"></textarea>
    </div>
    <div>
      <label for="category" class="block text-slate-300 mb-1">Category <span class="text-red-400">*</span></label>
      <input type="text" id="category" name="category" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500">
    </div>
    <div>
      <label for="quantity" class="block text-slate-300 mb-1">Quantity <span class="text-red-400">*</span></label>
      <input type="number" id="quantity" name="quantity" min="0" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500">
    </div>
    <div>
      <label for="price" class="block text-slate-300 mb-1">Price ($) <span class="text-red-400">*</span></label>
      <input type="number" id="price" name="price" min="0" step="0.01" required class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-md focus:ring-2 focus:ring-cyan-500">
    </div>
    <div>
      <label for="image" class="block text-slate-300 mb-1">Image</label>
      <input type="file" id="image" name="image" accept="image/*" class="w-full text-slate-300">
    </div>
    <div class="flex justify-end">
      <button type="submit" class="bg-cyan-600 hover:bg-cyan-700 text-white px-6 py-2 rounded-md font-semibold transition duration-200">Add Item</button>
    </div>
  </form>
</div>
